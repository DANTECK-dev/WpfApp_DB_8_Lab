<Window x:Class="WpfApp_DB_8_Lab.ViewYuridicheskieLitca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DB_8_Lab"
        mc:Ignorable="d"
        Title="ViewYuridicheskieLitca" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Grid.Row="1" IsReadOnly="True" Name="_DataGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код поставщика" Width="1*" Binding="{Binding КодПоставщика}"/>
                <DataGridTextColumn Header="Название" Width="1*" Binding="{Binding Названия}"/>
                <DataGridTextColumn Header="Налоговый Номер" Width="1*" Binding="{Binding НалоговыйНомер}"/>
                <DataGridTextColumn Header="Номер Свидетельства" Width="1*" Binding="{Binding НомерСвидетельства}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
