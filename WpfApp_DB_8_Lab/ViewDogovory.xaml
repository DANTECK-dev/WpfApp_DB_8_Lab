<Window x:Class="WpfApp_DB_8_Lab.ViewDogovory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DB_8_Lab"
        mc:Ignorable="d"
        Title="ViewDogovory" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Grid.Row="1" IsReadOnly="True" Name="_DataGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер Договора" Width="1*" Binding="{Binding НомерДоговора}"/>
                <DataGridTextColumn Header="Дата Договора" Width="1*" Binding="{Binding ДатаДоговора}"/>
                <DataGridTextColumn Header="Код поставщика" Width="1*" Binding="{Binding КодПоставщика}"/>
                <DataGridTextColumn Header="Комментарий" Width="2*" Binding="{Binding Комментарий}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
