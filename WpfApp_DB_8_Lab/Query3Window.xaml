<Window x:Class="WpfApp_DB_8_Lab.Query3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DB_8_Lab"
        mc:Ignorable="d"
        Title="Запрос 3" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Grid.Row="1" IsReadOnly="True" Name="DataGrid_1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код Поставщика" Width="1*" Binding="{Binding КодПоставщика}"/>
                <DataGridTextColumn Header="Номер Договора" Width="1*" Binding="{Binding НомерДоговора}"/>
                <DataGridTextColumn Header="Товар" Width="1*" Binding="{Binding Товар}"/>
                <DataGridTextColumn Header="Количество" Width="1*" Binding="{Binding Количество}"/>
                <DataGridTextColumn Header="Цена" Width="1*" Binding="{Binding Цена}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
